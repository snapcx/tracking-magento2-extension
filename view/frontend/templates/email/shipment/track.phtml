<?php $_shipment = $block->getShipment() ?>
<?php $_order = $block->getOrder() ?>
<?php if ($_shipment && $_order && $_shipment->getAllTracks()) : ?>
<br />
<?php $moduleStatus = $this->helper('jframeworks\shippingtracking\Helper\Data')
    ->getConfig('shippingtracking/shippingtracking_settings/shippingtracking_email_text'); ?>
    <?php
    foreach ($_shipment->getAllTracks() as $_item){
        $url =  $this
            ->helper('jframeworks\shippingtracking\Helper\Data')
            ->getTrackingPopupUrlBySalesModel($_item);
        $goodUrl = str_replace('/admin/', '/', $url);
        $track_number = "<a target='_blank' href='".$goodUrl."'>".$block->escapeHtml($_item->getNumber())."</a>";
        $track_number = str_replace("%tracking_id%",$track_number,$moduleStatus);
        $final_text =str_replace("%carrier%",$block->escapeHtml($_item->getTitle()),$track_number);
    }
    ?>
<p><?php echo $final_text; ?></p>
<?php endif; ?>